<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:background="@color/colorAccent">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/app_icon_new"
        android:layout_marginTop="@dimen/header_icon_top"
        android:layout_marginStart="@dimen/header_icon_start"
        android:layout_marginBottom="@dimen/header_icon_top"/>

    <ImageView
        android:id="@+id/imageView_user"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_user_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/header_icon_half"
        android:layout_marginEnd="@dimen/header_icon_start"
        android:layout_marginBottom="@dimen/header_icon_top"/>

    <ImageView
        android:id="@+id/imageView_ticket"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_ticket"
        android:layout_marginTop="@dimen/header_icon_half"
        android:layout_marginEnd="@dimen/header_icon_start"
        android:layout_toStartOf="@+id/imageView_user" />

</RelativeLayout>