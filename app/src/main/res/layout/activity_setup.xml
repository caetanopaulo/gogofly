<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gogoflyapp.gogofly.Activities.SetupActivity">
    <!--
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    -->


    <RelativeLayout
        android:id="@+id/relativeLayout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/AppIconOriginal"
            android:layout_marginTop="@dimen/header_icon_top"
            android:layout_marginStart="@dimen/header_icon_start"
            android:layout_marginBottom="@dimen/header_icon_top"/>

        <ImageView
            android:id="@+id/imageView_user"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_user_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/header_icon_half"
            android:layout_marginEnd="@dimen/header_icon_start"
            android:layout_marginBottom="@dimen/header_icon_top"/>

        <ImageView
            android:id="@+id/imageView_ticket"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_ticket"
            android:layout_marginTop="@dimen/header_icon_half"
            android:layout_marginEnd="@dimen/header_icon_start"
            android:layout_toStartOf="@+id/imageView_user" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_header"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/setup_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_setup_price"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_setup_price"
            android:layout_alignParentStart="true"
            android:id="@+id/seekBar_price"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="@string/setup_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar_price"
            android:layout_alignParentStart="true"
            android:id="@+id/textView_setup_days" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_setup_days"
            android:layout_alignParentStart="true"
            android:id="@+id/seekBar_days"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_input"
        android:layout_alignParentStart="true" >

        <CheckBox
            android:text="@string/check_box_eurozone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/checkBox_eurozone" />

        <CheckBox
            android:text="@string/check_box_usa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_usa"
            android:layout_below="@+id/checkBox_eurozone"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:text="@string/check_box_immunization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_immunization"
            android:layout_below="@+id/checkBox_usa"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:text="@string/check_box_nice_attendants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox_immunization"
            android:layout_alignParentStart="true"
            android:id="@+id/checkBox_attendants" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageViewGoGoFly"
        android:layout_margin="15sp"
        android:padding="10sp"/>

</RelativeLayout>
