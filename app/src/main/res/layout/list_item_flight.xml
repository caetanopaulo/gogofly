<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/list_item_padding">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            app:srcCompat="@drawable/common_google_signin_btn_icon_light_disabled"
            android:id="@+id/imageView_weather" />

        <TextView
            android:text="0 Â°C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_weather"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <TextView
        android:id="@+id/listItem_to"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:text="@string/list_item_arrival"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_margin="@dimen/header_icon_top"/>

    <TextView
        android:id="@+id/listItem_price"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:text="@string/list_item_cash"
        android:textColor="@color/colorAccent"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_margin="@dimen/header_icon_top"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/listItem_departure"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:text="@string/list_item_time"
        android:textColor="@color/colorAccent"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_margin="@dimen/header_icon_top"
        android:textAlignment="center" />

    <!--
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/list_item_next"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_margin="@dimen/header_icon_top"
        android:textAlignment="center" />
        -->

</LinearLayout>